---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogType?: string;
}

const { title, description = 'BharatDCIM - India\'s first DCIM with native ToD tariff billing. Automate data center power billing with state-wise tariff intelligence for Maharashtra, Tamil Nadu, Karnataka & Telangana.', ogType = 'website' } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPath = Astro.url.pathname;
const navItems = [
  { href: '/product', label: 'Product' },
  { href: '/calculator', label: 'ToD Calculator' },
  { href: '/blog', label: 'Resources' },
  { href: '/about', label: 'About' }
];

const isActive = (href: string) => currentPath === href || (href !== '/' && currentPath.startsWith(`${href}/`));

const segmentLabels: Record<string, string> = {
  'product': 'Product Features',
  'calculator': 'ToD Calculator',
  'blog': 'Resources',
  'about': 'About',
  'contact': 'Contact',
  'privacy': 'Privacy Policy',
  'terms': 'Terms of Service',
};

const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const isHomePage = pathSegments.length === 0;

const breadcrumbs = [
  { name: 'Home', url: new URL('/', Astro.site).toString() },
  ...pathSegments.map((segment, index) => {
    const isLast = index === pathSegments.length - 1;
    return {
      name: isLast && pathSegments.length > 1
        ? title
        : (segmentLabels[segment] || segment.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')),
      url: new URL('/' + pathSegments.slice(0, index + 1).join('/') + '/', Astro.site).toString()
    };
  })
];
---

<!doctype html>
<html lang="en-IN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | BharatDCIM</title>

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | BharatDCIM`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content="BharatDCIM" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL('/og-image.svg', Astro.site)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | BharatDCIM`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL('/og-image.svg', Astro.site)} />

    <!-- Locale & Theme -->
    <meta property="og:locale" content="en_IN" />
    <meta name="theme-color" content="#1e3a5f" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "BharatDCIM",
      "url": "https://bharatdcim.com",
      "logo": "https://bharatdcim.com/favicon.svg",
      "description": "India's first DCIM with native Time-of-Day tariff billing for data centers.",
      "sameAs": [
        "https://www.linkedin.com/company/bharatdcim"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "hello@bharatdcim.com",
        "contactType": "sales"
      }
    })} />

    {!isHomePage && (
      <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": breadcrumbs.map((crumb, i) => ({
          "@type": "ListItem",
          "position": i + 1,
          "name": crumb.name,
          "item": crumb.url
        }))
      })} />
    )}

    <slot name="head" />
  </head>
  <body class="antialiased">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-gradient-to-r from-[#1e3a5f]/95 via-[#223f67]/95 to-[#162d4a]/95 backdrop-blur-lg border-b border-white/10">
      <div class="container">
        <div class="flex items-center justify-between h-16 lg:h-20">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2">
            <span class="text-xl font-bold text-white">Bharat</span>
            <span class="text-xl font-bold text-[#e8a0ad]">DCIM</span>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-2">
            {navItems.map((item) => (
              <a
                href={item.href}
                class:list={[
                  'px-4 py-2 text-sm font-medium rounded-full transition-colors',
                  isActive(item.href)
                    ? 'bg-white/15 text-white'
                    : 'text-white/80 hover:text-white hover:bg-white/10'
                ]}
              >
                {item.label}
              </a>
            ))}
            <a href="/contact" class="inline-flex items-center gap-2 text-sm py-2 px-5 ml-2 rounded-full bg-[#8b2e3e] text-white hover:bg-[#6d2331] transition-colors">
              Get Demo
              <span>â†’</span>
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <button class="md:hidden p-2 rounded-lg hover:bg-white/10 text-white" id="mobile-menu-btn" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div class="hidden md:hidden pb-4" id="mobile-menu">
          <div class="rounded-2xl border border-white/15 bg-[#1d3659] p-4 flex flex-col gap-2">
            {navItems.map((item) => (
              <a
                href={item.href}
                class:list={[
                  'px-3 py-2 rounded-lg text-sm font-medium transition-colors',
                  isActive(item.href)
                    ? 'bg-white/15 text-white'
                    : 'text-white/80 hover:text-white hover:bg-white/10'
                ]}
              >
                {item.label}
              </a>
            ))}
            <a href="/contact" class="btn-primary justify-center text-center mt-2 py-3">Request Demo</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-16 lg:pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-[#1e3a5f] text-white">
      <div class="container py-14">
        <div class="grid lg:grid-cols-5 gap-10 items-start">
          <!-- Brand -->
          <div class="lg:col-span-2">
            <a href="/" class="flex items-center gap-1.5 mb-4">
              <span class="text-lg font-bold text-white">Bharat</span>
              <span class="text-lg font-bold text-[--color-accent]" style="color: #e8a0ad;">DCIM</span>
            </a>
            <p class="text-sm text-white/60 leading-relaxed mb-4">
              India's first DCIM with native<br />Time-of-Day tariff billing.
            </p>
            <div class="flex flex-wrap gap-2 mb-5">
              <span class="badge-chip !bg-white/10 !border-white/20 !text-white/80">ToD-native billing</span>
              <span class="badge-chip !bg-white/10 !border-white/20 !text-white/80">GST-ready invoices</span>
              <span class="badge-chip !bg-white/10 !border-white/20 !text-white/80">Multi-state tariffs</span>
            </div>
            <p class="text-xs text-white/50">
              Questions? Email <a class="underline hover:text-white/80" href="mailto:hello@bharatdcim.com">hello@bharatdcim.com</a>
            </p>
          </div>

          <!-- Product -->
          <div>
            <h4 class="text-xs font-semibold text-white/40 uppercase tracking-wider mb-4">Product</h4>
            <ul class="space-y-2.5 text-sm">
              <li><a href="/product" class="text-white/70 hover:text-white transition-colors">Features</a></li>
              <li><a href="/calculator" class="text-white/70 hover:text-white transition-colors">ToD Calculator</a></li>
              <li><a href="/contact" class="text-white/70 hover:text-white transition-colors">Get Demo</a></li>
            </ul>
          </div>

          <!-- Resources -->
          <div>
            <h4 class="text-xs font-semibold text-white/40 uppercase tracking-wider mb-4">Resources</h4>
            <ul class="space-y-2.5 text-sm">
              <li><a href="/blog" class="text-white/70 hover:text-white transition-colors">Blog</a></li>
              <li><a href="/about" class="text-white/70 hover:text-white transition-colors">About</a></li>
              <li><a href="/contact" class="text-white/70 hover:text-white transition-colors">Contact</a></li>
            </ul>
          </div>

          <!-- Newsletter -->
          <div>
            <h4 class="text-xs font-semibold text-white/40 uppercase tracking-wider mb-4">Get Updates</h4>
            <p class="text-sm text-white/50 mb-4">Monthly India tariff and product updates.</p>
            <form class="space-y-3" action="https://formspree.io/f/maqdnopv" method="POST">
              <input type="hidden" name="_subject" value="Footer newsletter signup" />
              <input
                type="email"
                name="email"
                required
                placeholder="you@company.com"
                class="w-full px-3 py-2.5 rounded-lg text-sm text-gray-900 bg-white focus:outline-none focus:ring-2 focus:ring-white/40"
              />
              <button type="submit" class="w-full text-sm font-medium bg-white/10 hover:bg-white/20 px-4 py-2.5 rounded-lg transition-colors">
                Subscribe
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="border-t border-white/10">
        <div class="container py-5">
          <div class="flex flex-col md:flex-row justify-between items-center gap-3">
            <p class="text-white/40 text-xs">&copy; 2026 BharatDCIM. All rights reserved.</p>
            <div class="flex items-center gap-4 text-xs">
              <a href="https://www.linkedin.com/company/bharatdcim" class="text-white/40 hover:text-white/70 transition-colors" target="_blank" rel="noopener noreferrer">LinkedIn</a>
              <a href="/privacy" class="text-white/40 hover:text-white/70 transition-colors">Privacy</a>
              <a href="/terms" class="text-white/40 hover:text-white/70 transition-colors">Terms</a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <!-- Mobile Menu Script -->
    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
